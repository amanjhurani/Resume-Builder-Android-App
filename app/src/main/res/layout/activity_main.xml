<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="false">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="380sp"
                android:layout_height="30sp"
                android:layout_marginTop="30sp"
                android:gravity="center_horizontal"
                android:text="Build Your Resume"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Email Id"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your MobileNumber"
                android:inputType="number" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Description"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/clgname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your College Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Branch"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/passyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Passing College Year"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/cgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Current CGPA"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/projects"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Projects"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Skills"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Your Past Experience"
                android:inputType="textMultiLine" />
            <EditText
                android:id="@+id/links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Other Links"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/button"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>